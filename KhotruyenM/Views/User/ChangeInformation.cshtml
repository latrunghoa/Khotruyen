@model KhotruyenM.Models.Users
@{
    ViewBag.Title = "ChangeInformation";
    Layout = "~/Views/Shared/FormAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group" style="display: flex">
            <strong style="margin: 0px 120px 0px 100px; font-size: 20px; color: black">
                EMAIL:
            </strong>
            <strong style="margin-left: 0px">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </strong>
            <strong style="margin: 0px 70px; font-size: 20px; color: black">
                BIỆT DANH:
            </strong>
            <strong style="margin-left: -20px">
                @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
            </strong>
        </div>

        <div class="form-group" style="display: flex">
            <strong style="margin-left: 100px; font-size: 20px; color: black">
                TÊN ĐĂNG NHẬP:
            </strong>
            <strong style="margin-left: 15px">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </strong>
            <strong style="margin: 0px 102px 0px 70px; font-size: 20px; color: black">
                MẬT KHẨU:
            </strong>
            <strong style="margin-left: -50px">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </strong>
        </div>

        <div class="form-group" style="display: flex">
            <strong style="margin-left: 100px; font-size: 20px; color: black">
                AVATAR:
            </strong>
            <strong style="margin-left: 104px">
                @Html.EditorFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                <input type="file" name="fileUpload2" id="fileUpload2" accept="Images/*" style="display:none;" />
                <input type="button" id="btnUpload2" value="Browser" class="btn btn-success" />
            </strong>
            <strong style="margin-left: 70px; font-size: 20px; color: black">
                NGÀY TẠO:
            </strong>
            <strong style="margin-left: 54px">
                @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
            </strong>

        </div>
        <div class="form-group" style="display: flex">
            <strong style="margin-left: 100px; font-size: 20px; color: black">
                PHÂN QUYỀN:
            </strong>
            <strong style="margin-left: 46px">
                @Html.DropDownList("RoleId", new List<SelectListItem> { new SelectListItem{Text = "Admin",Value = "1"},
               new SelectListItem{Text = "User", Value = "2"},
           }, new { style = "width:208px;margin-top:0px;text-align:center;font-size:20px", @class = "textbox", })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </strong>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("TRỞ VỀ", "ControlUser", null, new { @class = "back" })
                <input type="submit" value="Save" class="btn btn-default" style="margin-top: 0px; font-size: 20px; margin-left: 678px; background-color: honeydew" />
            </div>
        </div>
    </div>
}


<style>
    .form-control {
        width: 200px;
    }

    .back {
        font-family: ui-sans-serif;
        font-size: 20px;
        margin-left: -190px;
        background-color: honeydew;
        border: 2px solid black;
    }

    .form-control1 {
        width: 600px;
        height: 80px;
        margin-top: 12px;
        margin-left: 88px;
    }
</style>
@section uploadedituser{
    <script>
        $(function () {
            $('#btnUpload2').click(function () {
                $('#fileUpload2').trigger('click');
            });

            $('#fileUpload2').change(function () {
                if (window.FormData !== undefined) {
                    var fileUpload = $('#fileUpload2').get(0);
                    var files = fileUpload.files;
                    var formData = new FormData();
                    formData.append('file2', files[0]);
                    $.ajax({
                        type: 'POST',
                        url: '/Admin/ProcessUpload2',
                        contentType: false,
                        processData: false,
                        data: formData,
                        success: function (urlImage) {
                            $('#pictureUpload2').attr('src', urlImage);
                            $('#Avatar').val(urlImage);
                        },
                        error: function (err) {
                            alert(err.statusText);
                        }
                    });
                }
            })
        });
    </script>
}

