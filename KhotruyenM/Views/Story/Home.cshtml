@model IEnumerable<KhotruyenM.Models.Story>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/HomePage.cshtml";
}

<div class="row  mt-3 ">
    <div class=" col-6 " style="font-size: 20px;">Truyện vừa cập nhật</div>
    <div class=" col-6 d-flex justify-content-end " style="font-size: 15px;">
        <a href="">Xem thêm >></a>
    </div>
</div>
<div>
    <div class="row updated-Container ml-1 mt-2 ">
        @foreach (var item in Model)  
        {
            <!-- Updated Story -->
            <div class="col-xl-3 col-lg-4 col-md-4 col-6 p-0 image-box">
                <a href="@Url.Action("Detail", "Story", new { @id = item.StoryId })"><img class="updated-story-image " src="@item.Images"</a>
                <a class="image-content">
                    <p style="color: white">@item.vnName</p>
                </a>
            </div>
        }
    </div>
    
</div>

