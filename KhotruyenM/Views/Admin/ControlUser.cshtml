@model IEnumerable<KhotruyenM.Models.Users>
@{
    ViewBag.Title = "ControlUser";
    Layout = "~/Views/Shared/FormAdmin.cshtml";
}

<table class="table" style="width:100%; background-color:white">
    <tr>
        <th style="width:200px">
            <p style="color:black; font-size:15px; text-align:center">AVATAR</p>
        </th>
        <th style="width:200px">
            <p style="color: black; font-size: 15px; text-align: center ">TÊN NGƯỜI DÙNG</p>
        </th>
        <th>
            <p style="color: black; font-size: 15px; text-align: center ">BIỆT DANH</p>
        </th>
        <th style="width:50px">
            <p style="color: black; font-size: 15px; text-align: center ">EMAIL</p>
        </th>
        <th>
            <p style="color: black; font-size: 15px; text-align: center ">NGÀY TẠO</p>
        </th>
        <th>
            <p style="color: black; font-size: 15px; text-align: center ">CHỨC NĂNG</p>
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                <img src="@item.Avatar" style="width:200px;height:150px;margin-top:20px" />
            </td>
            <td style="text-align: center; color: black; font-size: 20px">
                <p>@Html.DisplayFor(modelItem => item.UserName)</p>
            </td>
            <td style="text-align: center; color: black; font-size: 18px">
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>

            <td style="text-align: center; color:black; font-size: 18px">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="text-align: center; color: black; font-size: 18px">
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td style="text-align: center; font-size: 16px">
                @Html.ActionLink("Sửa", "EditUser", new { id = item.UserId }) |
                @Html.ActionLink("Xóa", "DeleteUser", new { id = item.UserId })
            </td>
        </tr>
    }
</table>

